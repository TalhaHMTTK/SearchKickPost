

<% if @post.errors.any? %> 
  <h2>The following errors prevented the article from being saved</h2> 
  <ul> 
    <% @post.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <% end %> 
  </ul>
<% end %>

<%= form_with scope: :post, url: posts_path, local: true do |f| %>
  <p> 
   <%= f.label :title %><br/> 
   <%= f.text_area :title %>
  </p>
 
  <p> 
    <%= f.label :data %><br/> 
    <%= f.text_area :data %>
  </p>

  <p>
    <%= f.submit %> 
  </p>
<% end %>


